<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CellMigrationDetector"
             xmlns:vm="clr-namespace:CellMigrationDetector"
             x:Class="CellMigrationDetector.MainPage">

    <Grid ColumnDefinitions="Auto,Auto,*">
        <VerticalStackLayout Grid.Column="0" Padding="30,0" Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="Hello, World!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="{Binding MyStr}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button Text="Click me" Command="{Binding OpenFileCmd}" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
